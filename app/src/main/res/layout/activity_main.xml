<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/financialreport"
    tools:context="com.jewel.jewana.dskbranchreport.MainActivity">

<LinearLayout
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <Button
        android:layout_marginTop="40dp"
        android:id="@+id/btnDatabaseUpdate"
        android:layout_width="wrap_content"
        android:text="Database Update"
        android:layout_gravity="center"
        android:onClick="onClickDatabaseUpdate"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btnSearchBranch"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="Search Branch"
        android:onClick="onClickSearch"
        android:layout_height="wrap_content" />
</LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="match_parent">
<TextView
    android:layout_width="wrap_content"
    android:text="Developed by DSK Credit"
    android:textColor="@android:color/white"
    android:layout_gravity="bottom"
    android:textStyle="bold"
    android:layout_height="wrap_content" />
</LinearLayout>
</LinearLayout>
